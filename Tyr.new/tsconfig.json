{
  "compilerOptions": {
    "strict": true,
    "jsx": "react",
    "baseUrl": "",
    "lib": ["es6", "dom"],
    "mapRoot": "./",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist/out-tsc",
    "sourceMap": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "#/*": ["app/*"],
      "#config": ["app/envConfig/environment.prod.ts"]
    }
  }
}
